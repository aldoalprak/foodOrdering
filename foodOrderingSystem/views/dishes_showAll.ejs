<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-rc.2/css/materialize.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0-rc.2/js/materialize.min.js"></script>
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <title>Dishes List</title>
</head>

<body>
    <nav>
        <div class="nav-wrapper">
            <a href="#" class="brand-logo">Dishes</a>
            <ul id="nav-mobile" class="right hide-on-med-and-down">
                <li>
                    <a href="/dishes">Home</a>
                </li>
                <li>
                    <a href="/chefs">chef</a>
                </li>
                <li>
                    <a href="/admins">admin</a>
                </li>
                <li>
                    <a href="/">logout</a>
                </li>
            </ul>
        </div>
    </nav>
    <div class="fixed-action-btn">
        <a href='/dishes/add' class="btn-floating btn-large red">
            <i class="large material-icons">add</i>
        </a>
    </div>
    <table class="highlight">
        <thead>
            <tr>
                <th>description</th>
                <th>image</th>
                <th>price</th>
                <th>duration</th>
                <th>options</th>
            </tr>
        </thead>

        <tbody>
            <% dataDishes.forEach(dataDish =>{%>
                <tr>
                    <td>
                        <%= dataDish.description %>
                    </td>
                    <td>
                        <img src=<%=dataDish.image %> height="82" width="82">
                    </td>
                    <td>
                        <%= dataDish.price%>
                    </td>
                    <td>
                        <%= dataDish.duration %>
                    </td>
                    <td>
                        <a href='/dishes/<%= dataDish.id%>/edit'>edit</a>||
                        <a href='/dishes/<%= dataDish.id%>/delete' onclick="return confirm('are you sure want to delete this dish?')">delete</a>
                    </td>
                </tr>
                <%})%>
        </tbody>
    </table>

</body>

</html>